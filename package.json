{
  "name": "flovyn-sdk-typescript",
  "version": "0.1.0",
  "private": true,
  "description": "Flovyn TypeScript SDK - Durable workflow orchestration for TypeScript/Node.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/flovyn/sdk-typescript.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "testcontainers": "^10.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
